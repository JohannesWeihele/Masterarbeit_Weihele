<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5px</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">19:22</item>
    </style>

    <style name="headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#000000</item>
        <item name="android:fontFamily">@font/headline_aspace</item>
    </style>

    <style name="EditText_headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">#7A7A7A</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
    </style>

    <style name="check_button">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">140dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:background">@drawable/rounded_apply_button_background</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawableLeft">@drawable/ic_check</item>
    </style>

    <style name="new_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_button_background</item>
    </style>

    <style name="function_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_function_button_background</item>
    </style>

    <style name="function_Button_Icon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="small_ellipse">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/ellipse</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="big_ellipse">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/ellipse</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="ellipse_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:textColor">#46FD4D</item>
    </style>

    <style name="ellipse_text_unit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>





</resources>