<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".OptionsActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">

        <TextView
            style="@style/time"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            style="@style/headline"
            android:text="Notfall"
            />

        <ScrollView
            android:id="@+id/createAccout_Scroll"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:scrollbars="none"
            android:paddingBottom="20dp"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/options_btn_emergency_fall"
                        style="@style/options_Button"
                        android:layout_height="60dp"
                        android:text="Sturzerkennung"/>

                    <Switch
                        android:id="@+id/options_emergency_fall_switch"
                        style="@style/options_switch"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="60dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/options_btn_emergency_cancel"
                        style="@style/options_Button"
                        android:layout_height="60dp"
                        android:text="Abbruchzeit"/>

                    <EditText
                        android:id="@+id/options_emergency_cancel_time"
                        style="@style/options_val_edit"
                        android:elevation="3dp"
                        android:hint="sek"
                        android:layout_gravity="right"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        style="@style/options_val_additional_text"
                        android:elevation="3dp"
                        android:gravity="right"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="45dp"
                        android:text="sek."/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="120dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/options_btn_emergency_bpm"
                        style="@style/options_Button"
                        android:layout_height="60dp"
                        android:text="Herzfrequenz"/>

                    <Switch
                        android:id="@+id/options_emergency_bpm_switch"
                        style="@style/options_switch"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="180dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/options_btn_emergency_stress"
                        style="@style/options_Button"
                        android:layout_height="60dp"
                        android:text="Stresswert"/>

                    <Switch
                        android:id="@+id/options_emergency_stress_switch"
                        style="@style/options_switch"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="240dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/options_btn_emergency_body_temp"
                        style="@style/options_Button"
                        android:layout_height="60dp"
                        android:text="Körperwärme"/>

                    <Switch
                        android:id="@+id/options_emergency_bodytemp_switch"
                        style="@style/options_switch"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="300dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/options_btn_emergency_breathe_frequence"
                        style="@style/options_Button"
                        android:layout_height="60dp"
                        android:text="Atemfrequenz"/>

                    <Switch
                        android:id="@+id/options_emergency_breathe_freq_switch"
                        style="@style/options_switch"/>
                </FrameLayout>

                <Button
                    android:id="@+id/update_Button"
                    style="@style/new_button"
                    android:text="Aktualisieren"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="360dp"
                    android:onClick="updateEmergencyVals"/>
            </FrameLayout>
        </ScrollView>
        <ImageView
            android:id="@+id/down_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_down"/>
    </FrameLayout>


</androidx.wear.widget.BoxInsetLayout>